<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/calculationRow"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="40dp">

    <TextView
        android:id="@+id/calculationRowRoot"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5555"
        android:layout_marginStart="14dp"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/calculationRowDelete"
        android:layout_width="25dp"
        android:layout_marginRight="5dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ic_baseline_close_24"
        />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:progress="0"
        android:id="@+id/calculationRowProgress"
        android:layout_width="350dp"
        android:layout_height="15dp"
        app:layout_constraintRight_toLeftOf="@id/calculationRowDelete"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
         />


    <!-- TODO: edit this file as you want-->

</androidx.constraintlayout.widget.ConstraintLayout>